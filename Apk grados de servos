#include <Servo.h>

const int servoPin1 = 8;
const int servoPin2 = 9;

Servo myservo1; // Cambiado el nombre del servo a myservo
Servo myservo2; 


void setup() {
  Serial.begin(9600);    // Inicializaci칩n de la comunicaci칩n serial por USB
  Serial.println("Ready"); // Mensaje indicando que el sistema est치 listo

  myservo1.attach(servoPin1); // Inicializaci칩n del myservo en el pin correspondiente
  myservo2.attach(servoPin2);
  
}

void loop() {
  if (Serial.available() > 0) {
    char data = Serial.read();
     Serial.println(data); 
     
    if (data == 'a') {
      myservo1.write(90);
    }
    if (data == 'b') {
      myservo1.write(110);
    }
    if (data == 'c') {
      myservo1.write(150);
    }
     if (data == 'd') {
      myservo2.write(80);
    }
    if (data == 'e') {
      myservo2.write(90);
    }
    if (data == 'f') {
      myservo2.write(160);
    }
   
  }
}
